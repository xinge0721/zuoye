<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/shape_conner_white_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:gravity="center"
        android:id="@+id/tittle_tv"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/camera_ip_et"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:hint="请输入摄像头IP地址"/>

    <Button
        android:id="@+id/ip_ok_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="确认"
        android:textColor="#1D2932"
        android:textSize="19sp"
        android:background="@drawable/translucence_bg_lucency"/>
</LinearLayout>